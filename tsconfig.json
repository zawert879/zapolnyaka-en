{
  "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "target": "es2020",
      "outDir": "dist",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "resolveJsonModule": true,
      "allowJs": true,
      "declaration": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noImplicitAny": true,
      "noImplicitOverride": true,
      "skipLibCheck": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "newLine": "LF",
      "types": ["node"],
      "typeRoots": [
          "./src/types",
          "./node_modules/@types",
      ],
  },
  "exclude": [
      "node_modules",
      "build",
      "lib",
      "bin"
  ]
}
